<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/amboxj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7E5FF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Row1"
        android:background="#4493EA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:shadowColor="#2369F4"
            android:text="Row 1"
            android:textAlignment="center"
            android:textColor="#FBFAFA"
            android:textSize="18sp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Row2Col1"
            android:background="#4493EA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Row2Col1text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Row 2 Col 1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FBFAFA"
                android:textSize="18sp">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Row2Col2"
            android:background="#4493EA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Row2Col2text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Row 2 Col 2"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FBFAFA"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/Row3Col1"
            android:background="#4493EA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Row3Col1text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Row 3 Col 1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FBFAFA"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Row3Col2"
            android:background="#4493EA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Row3Col2text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Row 3 Col 2"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FBFAFA"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Row3Col3"
            android:background="#4493EA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Row3Col3text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Row 3 Col 3"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FBFAFA"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row4"
        android:background="#4493EA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Row4text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Row 4"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#FBFAFA"
            android:textSize="18sp">

        </TextView>

    </LinearLayout>

</LinearLayout>